                // alert(resData.Issue_Names[i].content);
            }

        }


         $('#cmt_btn').on("click",function(){
                 var comment_value = $('#comment').val();
                 $.ajax({
                     url:'/comment1',
                     type:'post',
                     data:{email_post:email,issue_name:issue_name,comment_value:comment_value},
                     success: function(Data){
